<%= render partial: "header" %>
<%= render partial: "stepper", locals: {current_step: step}%>
<div class="row">
  <div class="columns large-6 medium-centered">
    <h3 class="heading3"><%= t(".preview") %></h5>
    <div class="card">
      <% if translated_attribute(feature_settings.proposal_wizard_step_4_help_text).present? %>
        <%= render partial: "decidim/shared/announcement", locals: { announcement: feature_settings.proposal_wizard_step_4_help_text } %>
      <% end %>

      <div class="card__content">
        <%= decidim_form_for(@form, url: next_wizard_path, method: :put) do |form| %>
          <%= form.hidden_field :title %>
          <%= form.hidden_field :body %>
          <%= form.hidden_field :category_id %>
          <%= form.hidden_field :scope_id %>
          <%= form.hidden_field :user_group_id %>
          <%= form.hidden_field :address %>
          <%= form.hidden_field :has_address %>
          <%#= form.hidden_field :attachment %>

          <%= render partial: "proposal_preview_card", locals: {proposal: session[:proposal]}%>

          <%= proposal_wizard_actions form %>
        <% end %>
      </div>
    </div>
  </div>
</div>
