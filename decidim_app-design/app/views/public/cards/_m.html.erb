<h2 class="section-heading">Card de propuesta</h2>
<div class="row">
  <div class="columns small-12 medium-6">
    <p>Propuesta aceptada</p>
    <article class="card card--proposal success">
      <div class="card__content">
        <div class="card__header">
          <%= link_to page_path("proposal-view"), class: "card__link" do %>
            <h5 class="card__title">
              <%= Faker::StarWars.quote("leia_organa") %>
            </h5>
          <% end %>
          <div class="card__author">
            <%= partial "author_data", { extra: false } %>
          </div>
        </div>
        <div class="card__text">
          <p class="card__text--paragraph">
            <span class="card__text--status success">aceptada</span><%= Faker::Lorem.paragraph %>
          </p>
          <a class="card__text--category"><%= Faker::Lovecraft.tome %></a>
        </div>
      </div>
      <div class="card__status">
        <ul class="card-data">
          <li class="card-data__item">
            <%= Faker::Date.backward(725).strftime('%d/%m/%Y') %>
          </li>
          <li class="card-data__item">
            <a href="">
              <%= icon "bell", class: "icon--small", aria_label: "Respaldos", role: "img" %>
              Follow
            </a>
          </li>
          <li class="card-data__item">
            <a href="">
              <%= icon "bullhorn", class: "icon--small", aria_label: "Respaldos", role: "img" %>
              <%= Faker::Number.between(1, 100) %>
            </a>
          </li>
          <li class="card-data__item">
            <a href="" title="Comentarios">
              <%= icon "comment-square", class: "icon--small", aria_label: "Comentarios", role: "img" %>
              <%= Faker::Number.between(1, 100) %>
            </a>
          </li>
        </ul>
      </div>
      <div class="card__footer">
        <div class="card__support">
          <%= partial "progress_bar", { progress: Faker::Number.between(1, 100), total: 100 } %>

          <button class="card__button button button--sc small">
            Apoyar
          </button>
        </div>
      </div>
    </article>
  </div>
